# ================================
# SERVER CONFIGURATION
# ================================
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# ================================
# DATABASE CONFIGURATION
# ================================
MONGODB_URI=mongodb://localhost:27017/tutor-system
MONGODB_TEST_URI=mongodb://localhost:27017/tutor-system-test

# ================================
# JWT CONFIGURATION
# ================================
# Use a strong secret key in production (minimum 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=1d

# ================================
# SSO/CAS CONFIGURATION
# ================================
# Set to true when integrating with real CAS server
SSO_ENABLED=false
SSO_BASE_URL=http://localhost:8080/cas
SSO_SERVICE_URL=http://localhost:3000/api/auth/callback
SSO_VALIDATE_URL=http://localhost:8080/cas/serviceValidate
SSO_LOGIN_URL=http://localhost:8080/cas/login
SSO_LOGOUT_URL=http://localhost:8080/cas/logout

# ================================
# EXTERNAL SERVICES - HCMUT DATACORE
# ================================
DATACORE_API_URL=http://localhost:3001/api
DATACORE_TIMEOUT=5000
DATACORE_RETRY_ATTEMPTS=3

# ================================
# EXTERNAL SERVICES - HCMUT LIBRARY
# ================================
LIBRARY_API_URL=http://localhost:3002/api
LIBRARY_TIMEOUT=5000

# ================================
# CORS CONFIGURATION
# ================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3001,http://localhost:8080

# ================================
# RATE LIMITING
# ================================
# Window: 15 minutes (in milliseconds)
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# ================================
# EMAIL CONFIGURATION (Future)
# ================================
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@hcmut.edu.vn
